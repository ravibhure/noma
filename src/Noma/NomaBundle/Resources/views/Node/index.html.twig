{% extends 'NomaNomaBundle::base.html.twig' %}

{% block content %}
<form method="post" class="form-inline">
    <fieldset>
        {{ form_widget(form.name, { 'attr': {'placeholder': 'hostname'} }) }}
        {{ form_widget(form.ip, { 'attr': {'placeholder': 'ip address'} }) }}
        <input type="submit" value="Save" class="btn">
        {{ form_rest(form) }}
    </fieldset>
</form>

<table class="table table-striped">
    <thead>
        <tr><th>node</th><th>ip</th><th>properties</th></tr>
    </thead>
    <tbody id="nodeslist_body">
    </tbody>
</table>
<script>
    $(document).ready(function() {
        $('#nav-nodes').addClass('active');
        var cfg = {
            'base_url': '{{ path('noma_noma_homepage') }}'
        };
        NOMA.init(cfg);
        NOMA.nodes.init();
        NOMA.nodes.refresh();
    });
</script>
{% endblock %}
